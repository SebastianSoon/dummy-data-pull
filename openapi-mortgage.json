{
  "openapi": "3.0.3",
  "info": {
    "title": "Mortgage API",
    "version": "1.0.0",
    "description": "API for retrieving mortgage data with comprehensive filtering."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/mortgages": {
      "get": {
        "operationId": "listMortgages",
        "summary": "Get all mortgages",
        "description": "Returns a list of mortgage records. Supports comprehensive filtering via query parameters.",
        "tags": ["Mortgages"],
        "parameters": [
          { "in": "query", "name": "lenders", "schema": { "type": "string" }, "description": "Filter by lender name (partial match)" },
          { "in": "query", "name": "ratesType", "schema": { "type": "string" }, "description": "Filter by rates type (partial match)" },
          { "in": "query", "name": "qualifyingLoanAmount", "schema": { "type": "number" }, "description": "Filter by exact qualifying loan amount" },
          { "in": "query", "name": "qualifyingLoanAmountMin", "schema": { "type": "number" }, "description": "Minimum qualifying loan amount" },
          { "in": "query", "name": "qualifyingLoanAmountMax", "schema": { "type": "number" }, "description": "Maximum qualifying loan amount" },
          { "in": "query", "name": "fundingRequired", "schema": { "type": "string" }, "description": "Filter by funding required (partial match)" },
          { "in": "query", "name": "sCBPriorityClientsOnly", "schema": { "type": "boolean" }, "description": "Filter by SCB Priority Clients Only (true/false)" },
          { "in": "query", "name": "1stYr", "schema": { "type": "string" }, "description": "Filter by 1st year rate (partial match)" },
          { "in": "query", "name": "2ndYr", "schema": { "type": "string" }, "description": "Filter by 2nd year rate (partial match)" },
          { "in": "query", "name": "3rdYr", "schema": { "type": "string" }, "description": "Filter by 3rd year rate (partial match)" },
          { "in": "query", "name": "4thYr", "schema": { "type": "string" }, "description": "Filter by 4th year rate (partial match)" },
          { "in": "query", "name": "5thYr", "schema": { "type": "string" }, "description": "Filter by 5th year rate (partial match)" },
          { "in": "query", "name": "thereafter", "schema": { "type": "string" }, "description": "Filter by thereafter rate (partial match)" },
          { "in": "query", "name": "lockInPeriod", "schema": { "type": "string" }, "description": "Filter by lock in period (partial match)" },
          { "in": "query", "name": "prepaymentPenaltyWithinLockInPeriod", "schema": { "type": "string" }, "description": "Filter by prepayment penalty (partial match)" },
          { "in": "query", "name": "tDSRRateForCalculation", "schema": { "type": "string" }, "description": "Filter by TDSR rate (partial match)" },
          { "in": "query", "name": "legalOrCashRebateSubsidy", "schema": { "type": "string" }, "description": "Filter by legal/cash rebate subsidy (partial match)" },
          { "in": "query", "name": "valuationSubsidy", "schema": { "type": "string" }, "description": "Filter by valuation subsidy (partial match)" },
          { "in": "query", "name": "freeConversionBenefit", "schema": { "type": "string" }, "description": "Filter by free conversion benefit (partial match)" },
          { "in": "query", "name": "remark1", "schema": { "type": "string" }, "description": "Filter by remark 1 (partial match)" },
          { "in": "query", "name": "remark2", "schema": { "type": "string" }, "description": "Filter by remark 2 (partial match)" },
          { "in": "query", "name": "remark3", "schema": { "type": "string" }, "description": "Filter by remark 3 (partial match)" }
        ],
        "responses": {
          "200": {
            "description": "List of mortgages",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Mortgage"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Mortgage": {
        "type": "object",
        "properties": {
          "lenders": { "type": "string" },
          "ratesType": { "type": "string" },
          "qualifyingLoanAmount": { "type": "number" },
          "fundingRequired": { "type": "string" },
          "sCBPriorityClientsOnly": { "type": "boolean" },
          "1stYr": { "type": "string" },
          "2ndYr": { "type": "string" },
          "3rdYr": { "type": "string" },
          "4thYr": { "type": "string" },
          "5thYr": { "type": "string" },
          "thereafter": { "type": "string" },
          "lockInPeriod": { "type": "string" },
          "prepaymentPenaltyWithinLockInPeriod": { "type": "string" },
          "tDSRRateForCalculation": { "type": "string" },
          "legalOrCashRebateSubsidy": { "type": "string" },
          "valuationSubsidy": { "type": "string" },
          "freeConversionBenefit": { "type": "string" },
          "remark1": { "type": "string" },
          "remark2": { "type": "string" },
          "remark3": { "type": "string" }
        }
      }
    }
  }
}
